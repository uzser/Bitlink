@using Bitlink.Web.Infrastructure.Resources
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@UIRes.ApplicationName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="container-full">
        <div class="row">
            <div class="col-sm-12 text-center v-center">
                <h1><a href="#/">@UIRes.ApplicationName</a></h1>
                <p class="lead">Yet another shortener</p>
                <br>
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/vendors")
    @Scripts.Render("~/bundles/spa")
    @RenderSection("scripts", required: false)
</body>

</html>